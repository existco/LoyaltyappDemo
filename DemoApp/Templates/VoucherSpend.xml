<?xml version="1.0" encoding="utf-8" ?>
<Layout>
  <text size="150%" style="bold" align="center"><value source="StoreName" /></text>
  <text />
  <grid>
    <row>
      <cell width="25%">
        <text>
          <value source="TransactionTimestamp" format="dd/MM/yy" />
        </text>
      </cell>
      <cell width="25%">
        <text>
          <value source="TransactionTimestamp" format="HH:mm tt" />
        </text>
      </cell>
      <cell>
        <text align="right">TRANS ID: <value source="TransactionID" /></text>
      </cell>
    </row>
  </grid>
  <text />
  <text style="bold">TRANSACTION</text>
  <text />

  <grid>
    <row>
      <cell>
        <text size="125%" style="bold">TOTAL:</text>
      </cell>
      <cell>
        <text size="125%" style="bold" align="right"><value source="Amount" format="C2" /></text>
      </cell>
    </row>
  </grid>

  <text />
  <text size="80%" style="bold" align="center">: : : : : : : : : YOU ARE REDEEMING : : : : : : : : :</text>
  <text size="250%" align="center" style="bold"><value source="PointsSpent" format="#,##0" /></text>
  <text size="80%" style="bold" align="center">LOYALTY APP POINTS*</text>

  <text size="90%" />

  <text align="center" size="90%">Scan this QR code using Loyalty app to redeem your Loyalty app points* now!</text>

  <qrcode margin="0,25%" source="Token" />

  <text size="75%" style="bold" align="center">*See Full T&amp;C's at www.loyaltyapp.com.au</text>
</Layout>